@model EmployeeDetailViewModel

<style>
    img {
        border-radius: 50%;
    }
</style>
<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Employe Details</li>
                </ol>
            </nav><br /><br />
            <div class="wrap d-flex justify-content-sm-center flex-wrap">
                <img style="width:200px" src="@Url.Content(Model.ImageUrl)" alt="" />
                <div class="wrap aling-items-center ml-5">
                    <p class="font-weight-bold text-success" style="font-size:20px">@Model.FullName</p>
                    <p class="font-weight-normal">Role: @Model.Designation</p>
                    <p class="font-weight-normal">Gender: @Model.Gender</p>
                    <p class="font-weight-normal">Date of Birth: @Model.DOB.ToString("dd/MM/yyyy")</p>
                    <p class="font-weight-normal">Employee Number: @Model.EmployeeNo</p>
                    <p class="font-weight-normal">NI Number:@Model.NationalInsuranceNo</p>
                    <p class="font-weight-normal">Email: <a href="#">@Model.Email</a></p>
                    <p class="font-weight-normal">Phone: <a href="#">@Model.Phone</a></p>
                    <br /><br />

                    <p class="font-weight-bold"> Pay & Deductions</p>
                    <hr style="background-color:brown" />
                    <p class="font-weight-normal">Payment Method: @Model.PaymentMethod</p>
                    <p class="font-weight-normal">Student Loan: @Model.StudentLoan</p>
                    <p class="font-weight-normal">Union Member: @Model.UnionMember</p>
                    <p class="font-weight-normal"><a href="mailto:@Model.Email?subject=Payslip&body=Attached within is your payslip. ">Send Payslip</a></p>
                    <br /><br />

                    <p class="font-weight-bold"> Address</p>
                    <hr style="background-color:brown" />
                    <p class="font-weight-normal">Payment Method: @Model.Address</p>
                    <p class="font-weight-normal">Student Loan: @Model.City</p>
                    <p class="font-weight-normal">Union Member: @Model.Postcode</p>
                    <br /><br />
                </div>
            </div>
        </div>
    </div>
</div>